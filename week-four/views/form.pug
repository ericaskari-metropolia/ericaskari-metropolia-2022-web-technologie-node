extends layout.pug

block content
    form(method='post' action='/login' class='max-w-md mx-auto grid grid-cols-1 gap-2 p-8')
        h1= 'Login'
        input(type='text' value='foo@bar.fi' name='username' placeholder='username' class='rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent')
        br
        input(type='password' value='foobar' name='password' placeholder='password' class='rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent')
        br
        button(type='submit' class='py-2 px-4  bg-green-600 hover:bg-green-700 focus:ring-green-500 focus:ring-offset-green-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2')= 'login'
